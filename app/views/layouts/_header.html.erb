            <%= link_to destroy_user_session_path, method: :delete do %>
              <i class="fas fa-sign-out-alt mx-2">ログアウト</i>
            <% end %>
          </li>
        <!-- 管理者がログインしている時 -->
        <% elsif admin_signed_in? %>
          <li class="nav-item">
            <%= link_to admins_users_path do %>
