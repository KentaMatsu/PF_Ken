          </li>
        <!-- ログインしていない時 -->
        <% else %>
          <li class="nav-item">
            <%= link_to home_about_path do %>
              <i class="fas fa-home mx-2">About</i>
            <% end %>
          </li class="nav-item">
          <li>
            <%= link_to new_user_registration_path do %>
