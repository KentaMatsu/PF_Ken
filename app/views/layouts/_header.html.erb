          </li>
          <li class="nav-item">
            <%= link_to new_user_session_path do %>
              <i class="fas fa-sign-in-alt mx-2">ログイン</i>
            <% end %>
          </li>
        <% end %>
        </ul>
      </nav>
    </div>
