<div class="container">
  <div class="row">
    <div class="col-7 my-5 text-center">
      <h2 class="mb-3">お問合せ一覧</h2>
      <% @contacts.each do |contact| %>
      <table class="table table-striped">
        <tr>
          <th>名前</th>
          <th>メールアドレス</th>
          <th>内容</th>
          <th>作成日</th>
          <th></th>
        </tr>
        <tr>
          <td><%= contact.name %></td>
          <td><%= contact.email %></td>
          <td><%= contact.title %></td>
          <td><%= contact.created_at.strftime('%Y/%m/%d %H:%M') %></td>
          <td><%= link_to "詳細", admins_contact_path(contact), class: "btn btn-primary" %></td>
        </tr>
      </table>
      <% end %>
    </div>
    <div class="col-4 offset-1 my-5">
      <%= render "admins/admin/menu" %>
    </div>
  </div>
</div>