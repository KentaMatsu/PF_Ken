<div>
  <div>
    <h2>ブログ編集画面</h2>
  </div>
  <%= form_with model: @blog, url: admins_blog_path, method: :patch, local: true do |f| %>
  <table>
    <tr>
      <th><%= f.label :blog_image, "投稿画像" %></th>
      <td><%= f.file_field :blog_image %></td>
    </tr>
    <tr>
      <th><%= f.label :title, "タイトル" %></th>
      <td><%= f.text_field :title %></td>
    </tr>
    <tr>
      <th><%= f.label :text, "コメント" %></th>
      <td><%= f.text_field :text %></td>
    </tr>
  </table>
  <div>
    <%= f.submit '更新' %>
  </div>
  <% end %>
  <div>
    <%= link_to "ブログ詳細にもどる", admins_blog_path %>
  </div>
</div>

