<% chat_room.chats.each do |chat| %>
<table class="table table-striped">
  <tr>
    <th><%= chat.user.user_name %></th>
    <th><%= chat.created_at.strftime('%Y/%m/%d %H:%M:%S') %></th>
    <th>
      <%= link_to '削除', chat_room_chat_path(chat.chat_room, chat), method: :delete, "data-confirm" => "本当に消しますか?", class: "btn btn-danger" %>
    </th>
  </tr>
  <tr>
    <td colspan="3">
      <%= chat.response %>
    </td>
  </tr>
</table>
<% end %>
