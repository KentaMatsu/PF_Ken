<div class="container col my-5">
  ユーザーコメント
  <% blog.blog_comments.each do |blog_comment| %>
  <div class="my-3">
  <%= link_to admins_user_path(blog_comment.user) do %>
    <div class="my-3">
      <% if blog_comment.user.profile_image.attached? %>
        <%= image_tag blog_comment.user.profile_image.variant(resize: '70x50') %>
      <% else %>
        <%= image_tag 'no_image.jpg', size: '70x50' %>
      <% end %>
      <%= blog_comment.user.user_name %>
    </div>
    <% end %>
    <div class="my-3">
      コメント：<%= blog_comment.comment %>
      <%= link_to '削除', admins_blog_blog_comment_path(blog_comment.blog_id, blog_comment.id), method: :delete, "data-confirm" => "本当に消しますか?", class: "btn btn-danger" %>
    </div>
  </div>
  <% end %>
</div>