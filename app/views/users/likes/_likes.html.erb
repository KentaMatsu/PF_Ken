<% if posts.liked_by(current_user) %>
  <%= link_to post_likes_path(posts), method: :delete, remote: true do %>
     <i class="fa fa-heart" aria-hidden="true" style="color: red;"></i>
    <%= posts.likes.count %>
  <% end %>
<% else %>
  <%= link_to post_likes_path(posts), method: :post, remote: true do %>
    <i class="fa fa-heart" aria-hidden="true"></i>
    <%= posts.likes.count %>
  <% end %>
<% end %>