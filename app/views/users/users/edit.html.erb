<h2>ユーザー情報編集</h2>

<%= form_with model: @user, url: user_path, local: true do |f| %>
<div>
  <table>
    <tr>
      <th>画像表示</th>
      <td><%= f.file_field :image %></td>
      <td></td>
    </tr>
    <tr>
      <th><%= f.label :ニックネーム %></th>
      <td><%= f.text_field :user_name %></td>
      <td></td>
    </tr>
    <tr>
      <th><%= f.label :紹介文 %></th>
      <td><%= f.text_field :text %></td>
      <td></td>
    </tr>
    <tr>
      <th><%= f.label :氏名 %></th>
      <td><%= f.text_field :last_name %></td>
      <td><%= f.text_field :first_name %></td>
    </tr>
    <tr>
      <th><%= f.label :フリガナ %></th>
      <td><%= f.text_field :kana_last_name %></td>
      <td><%= f.text_field :kana_first_name %></td>
    </tr>
    <tr>
      <th><%= f.label :メールアドレス %></th>
      <td><%= f.text_field :email %></td>
      <td></td>
    </tr>
  </table>
    <div>
    <%= f.submit "編集内容を保存" %>
    <%= link_to "退会する", users_check_path,  %>
  </div>
  <% end %>
</div>
