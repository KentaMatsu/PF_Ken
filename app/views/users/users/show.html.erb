<div class="container">
  <div class="row">
    <div class="col-7 my-5">
      <h2 class="mb-4"><%= @user.user_name %>の投稿</h2>
      <% @posts.each do |post| %>
      <div class="row mb-5 border">
        <div class="mr-4">
          <%= link_to post_path(post.id) do %>
            <% if post.post_image.attached? %>
              <%= image_tag post.post_image.variant(resize: '324x200')  %>
            <% end %>
          <% end %>
        </div>
        <div>
          <div>
            <%= link_to post_path(post.id) do %>
              <h4><%= post.title %></h4>
            <% end %>
          </div>
          <div class="my-3">
            コメント数：<%= post.post_comments.count %>
          </div>
          <div>
            いいね：<%= render "users/likes/likes", post: post %>
          </div>
          <div class="mt-3">
            投稿日<br>
            <%= post.created_at.strftime('%Y/%m/%d %H:%M') %>
          </div>
        </div>
      </div>
      <% end %>
    </div>
    <div class="col-4 offset-1 my-5">
      <%= render "users/users/list", user: @user %>
    </div>
  </div>
</div>