<div class="col text-center">
  <div>
    <h4>新規スレッド作成</h4>
  </div>
  <%= form_with model:ChatRoom, local: true do |f| %>
  <div class="my-4">
    <%= f.label :room_name, "スレッドタイトル" %>
    <%= f.text_field :room_name, size: "60x30" %>
  </div>
  <div>
    <%= f.submit '作成する', class: "btn btn-success" %>
  </div>
  <% end %>
</div>
