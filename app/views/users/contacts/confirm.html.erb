<div class="container my-4 col-8">
  <div class="my-4">
    <h3 class="my-4 text-center">入力内容確認</h3>
  </div>
  <div class="my-4">
    <table class="table">
      <tbody>
        <tr>
          <td class="text-center" style="width: 30%;">お名前</td>
          <td><%= @contact.name %></td>
        </tr>
        <tr>
          <td class="text-center" style="width: 30%;">メールアドレス</td>
          <td><%= @contact.email %></td>
        </tr>
        <tr>
          <td class="text-center" style="width: 30%;">お問合せ内容</td>
          <td><%= @contact.title %></td>
        </tr>
        <tr>
          <td class="text-center">メッセージ</td>
          <td style="white-space: pre-wrap;"><%= @contact.message %></td>
        </tr>
      </tbody>
    </table>
  </div>
  <div class="row my-5">
    <div class="col text-center">
      <%= form_with model: @contact, local: true do |f| %>
        <%= f.hidden_field :name %>
        <%= f.hidden_field :email %>
        <%= f.hidden_field :title %>
        <%= f.hidden_field :message %>
        <div><%= f.submit '送信', class: "btn btn-outline-success" %></div>
      <% end %>
    </div>
    <div class="col text-center">
      <%= form_with model: @contact, url: back_path, local: true do |f| %>
        <%= f.hidden_field :name %>
        <%= f.hidden_field :email %>
        <%= f.hidden_field :title %>
        <%= f.hidden_field :message %>
        <div><%= f.submit '入力画面に戻る', class: "btn btn-outline-primary" %></div>
      <% end %>
    </div>
  </div>
</div>

