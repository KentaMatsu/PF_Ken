<% blog.blog_comments.each do |blog_comment| %>
<div>
  <div>
    <% if blog_comment.user.profile_image.attached? %>
      <%= image_tag blog_comment.user.profile_image.variant(resize: '70x50') %>
    <% else %>
      <%= image_tag 'no_image.jpg', size: '70x50' %>
    <% end %>
  </div>
  <div>
    <%= blog_comment.user.user_name %>
  </div>
  <div>
    <%= blog_comment.comment %>
  </div>
  <% if current_user == blog_comment.user %>
  <div>
    <%= link_to '削除', blog_blog_comment_path(blog_comment.blog_id, blog_comment.id), method: :delete, "data-confirm" => "本当に消しますか?" %>
　</div>
  <% end %>

</div>
<% end %>