<div>
  <div>
    <h2>投稿編集画面</h2>
  </div>
  <%= form_with model: @post, local: true do |f| %>
  <table>
    <tr>
      <th><%= f.label :post_image, "投稿画像" %></th>
      <td><%= f.file_field :post_image %></td>
    </tr>
    <tr>
      <th><%= f.label :title, "タイトル" %></th>
      <td><%= f.text_field :title %></td>
    </tr>
    <tr>
      <th><%= f.label :text, "説明文" %></th>
      <td><%= f.text_field :text %></td>
    </tr>
  </table>
  <div>
    <%= f.submit '更新' %>
  </div>
  <% end %>
  <div>
    <%= link_to "マイページ", user_path %>｜
    <%= link_to "投稿詳細にもどる", post_path %>
  </div>
</div>

