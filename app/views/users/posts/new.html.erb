<div>
  <div>
    <h2>新規投稿</h2>
  </div>
  <%= form_with model:post, local: true do |f| %>
  <table>
    <tr>
      <th><%= f.label :image, "投稿画像" %></th>
      <td><%= f.file_field :image %></td>
    </tr>
    <tr>
      <th><%= f.label :title, "タイトル" %></th>
      <td><%= f.text_field :title %></td>
    </tr>
    <tr>
      <th><%= f.label :text, "説明文" %></th>
      <td><%= f.text_field :text %></td>
    </tr>
  </table>
  <div>
    <%= link_to "マイページ", user_path %>
    <%= f.submit '投稿する' %>
  </div>
  <% end %>
</div>
