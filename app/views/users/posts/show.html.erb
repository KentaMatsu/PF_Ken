<div>
  <h2>投稿情報</h2>
  <div>
    <%= image_tag @post.post_image %>
  </div>
  <div>
    <%= @post.title %>
    <% if @post.user_id == current_user.id %>
      <%= link_to "編集", edit_post_path %>
    <% end %>
  </div>
  <div>
    <%= @post.title %>
  </div>
  <div>
    いいね：<%= @post.likes.count %>
  </div>
  <div>
    <% @post.post_comments.each do |post_comment| %>
    <div>
      <%= link_to user_path(post_comment.user) do %>
        <% if @user.profile_image.attached? %>
          <%= image_tag @user.profile_image %>
        <% else %>
         <%= image_tag 'no_image.jpg' %>
        <% end %>
      <% end %>
    </div>
    <div>
      <%= render "post_comments/post_comments", post: @post, post_comment: @post_comment %>
    </div>
    <% end %>
  </div>
  <div>
    <%= form_with model:post_comment, local: true do |f| %>
      <%= f.text_area :comment, 'コメント投稿', :placeholder => "コメント内容" %><br>
      <%= f.submit "投稿" %>
    <% end %>
  </div>
  <div>
    <%= link_to "マイページ", user_path %>
    <%= link_to "ユーザー投稿一覧", posts_path %>
  </div>
</div>
<div>
  <%= render "users/list", user: @user %>
</div>